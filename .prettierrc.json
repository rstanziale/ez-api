{
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "bracketSameLine": true,
  "printWidth": 100,
  "endOfLine": "auto",
  "plugins": ["@typespec/prettier-plugin-typespec"],
  "overrides": [{ "files": "*.tsp", "options": { "parser": "typespec" } }]
}
