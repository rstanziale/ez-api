{
  "name": "@rs-box/ez-api",
  "version": "1.0.0",
  "description": "API development toolkit powered by TypeSpec",
  "repository": {
    "type": "git",
    "url": "https://github.com/rstanziale/ez-api.git"
  },
  "keywords": [
    "typespec",
    "api",
    "typescript"
  ],
  "scripts": {
    "prepare": "husky",
    "format": "tsp format \"**/*.tsp\"",
    "test": "vitest",
    "api:new": "ts-node --project tools/tsconfig.json tools/api-new.ts",
    "build:all": "npm-run-all --parallel"
  },
  "author": "Roberto B. Stanziale",
  "license": "MIT",
  "peerDependencies": {
    "@typespec/compiler": "latest",
    "@typespec/http": "latest",
    "@typespec/openapi": "latest",
    "@typespec/openapi3": "latest",
    "@typespec/rest": "latest",
    "@typespec/versioning": "latest"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.10.2",
    "@typespec/compiler": "latest",
    "@typespec/http": "latest",
    "@typespec/openapi": "latest",
    "@typespec/openapi3": "latest",
    "@typespec/prettier-plugin-typespec": "^0.62.0",
    "@typespec/rest": "latest",
    "@typespec/versioning": "latest",
    "@vitest/coverage-v8": "^2.1.8",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "vitest": "^2.1.8"
  },
  "private": true
}
